# frozen_string_literal: true

@rooms.map do |room|
  {
    id: room.id,
    name: room.name,
    description: room.description,
    type: room.type,
    num_guests: room.num_guests,
    beds_single: room.beds_single,
    beds_double: room.beds_double,
    url: room_url(room, format: :json)
  }
end
